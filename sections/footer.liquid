<footer class="bg-gray-900 text-gray-300">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="col-span-1 md:col-span-2">
        <div class="mb-4">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | img_url: '100x' }}" alt="{{ shop.name }}" class="h-10 w-auto brightness-0 invert">
          {% else %}
            <img src="{{ 'logo.svg' | asset_url }}" alt="Baliza DGT" class="h-10 w-auto brightness-0 invert">
          {% endif %}
        </div>
        <p class="text-sm text-gray-400 mb-4 max-w-md">
          {{ section.settings.description | default: "Dispositivo de preseñalización de peligro V-16 geolocalizado, homologado por la DGT. Obligatorio desde el 1 de enero de 2026." }}
        </p>
        <div class="space-y-2 text-sm">
          {% if section.settings.email != blank %}
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href="mailto:{{ section.settings.email }}" class="hover:text-white transition-colors">
              {{ section.settings.email }}
            </a>
          </div>
          {% endif %}
          {% if section.settings.phone != blank %}
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:{{ section.settings.phone }}" class="hover:text-white transition-colors">
              {{ section.settings.phone }}
            </a>
          </div>
          {% endif %}
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>{{ section.settings.location | default: "España" }}</span>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-white font-semibold mb-4">Navegación</h3>
        <ul class="space-y-2 text-sm">
          {% for link in linklists[section.settings.footer_menu].links %}
            <li>
              <a href="{{ link.url }}" class="hover:text-white transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/pages/reviews" class="hover:text-white transition-colors">
              Valoraciones
            </a>
          </li>
          {% for link in linklists[section.settings.legal_menu].links %}
            <li>
              <a href="{{ link.url }}" class="hover:text-white transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm">
        <p class="text-gray-400">
          © {{ 'now' | date: '%Y' }} {{ shop.name }} - Todos los derechos reservados.
        </p>
        <p class="text-gray-500 text-xs">
          Certificación IDIADA PC25060265 | Homologado según RD 1030/2022
        </p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo personalizado",
      "info": "Si no subes un logo, se usará el logo predeterminado de Baliza DGT"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Dispositivo de preseñalización de peligro V-16 geolocalizado, homologado por la DGT. Obligatorio desde el 1 de enero de 2026."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "sdafasdf"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+34 900 123 456"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location",
      "default": "España"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal Menu"
    }
  ]
}
{% endschema %}
