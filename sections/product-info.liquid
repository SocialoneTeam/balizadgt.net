{% assign current_variant = product.selected_or_first_available_variant %}

<div class="min-h-screen bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <a href="/" class="text-gray-600 hover:text-red-600 mb-8 flex items-center gap-2 transition-colors inline-flex">
      ← Volver al inicio
    </a>

    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <div class="space-y-4">
        <div class="aspect-square rounded-2xl overflow-hidden bg-gray-100 shadow-xl">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '800x800' }}" alt="{{ product.title }}" class="w-full h-full object-cover" id="main-product-image">
          {% else %}
            <img src="https://images.pexels.com/photos/1545743/pexels-photo-1545743.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Baliza V-16 DGT" class="w-full h-full object-cover" id="main-product-image">
          {% endif %}
        </div>
        <div class="grid grid-cols-3 gap-4">
          {% if product.images.size > 0 %}
            {% for image in product.images limit: 5 %}
              <button onclick="changeImage('{{ image | img_url: '800x800' }}')" class="aspect-square rounded-xl overflow-hidden border-2 border-gray-200 hover:border-red-600 transition-all">
                <img src="{{ image | img_url: '200x200' }}" alt="{{ product.title }}" class="w-full h-full object-cover">
              </button>
            {% endfor %}
          {% else %}
            <button onclick="changeImage('https://images.pexels.com/photos/1545743/pexels-photo-1545743.jpeg?auto=compress&cs=tinysrgb&w=800')" class="aspect-square rounded-xl overflow-hidden border-2 border-red-600 hover:border-red-700 transition-all">
              <img src="https://images.pexels.com/photos/1545743/pexels-photo-1545743.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Baliza V-16" class="w-full h-full object-cover">
            </button>
            <button onclick="changeImage('https://images.pexels.com/photos/707046/pexels-photo-707046.jpeg?auto=compress&cs=tinysrgb&w=800')" class="aspect-square rounded-xl overflow-hidden border-2 border-gray-200 hover:border-red-600 transition-all">
              <img src="https://images.pexels.com/photos/707046/pexels-photo-707046.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Uso en emergencia" class="w-full h-full object-cover">
            </button>
            <button onclick="changeImage('https://images.pexels.com/photos/13065690/pexels-photo-13065690.jpeg?auto=compress&cs=tinysrgb&w=800')" class="aspect-square rounded-xl overflow-hidden border-2 border-gray-200 hover:border-red-600 transition-all">
              <img src="https://images.pexels.com/photos/13065690/pexels-photo-13065690.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Seguridad vial" class="w-full h-full object-cover">
            </button>
          {% endif %}
        </div>
      </div>

      <div class="space-y-6">
        <div>
          <div class="inline-flex items-center gap-2 bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm font-semibold mb-4">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
            Certificado IDIADA PC25080175
          </div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ product.title }}</h1>
          <div class="flex items-center gap-6 mb-4 flex-wrap">
            <a href="/pages/reviews" class="flex items-center gap-2 hover:opacity-80 transition-all">
              <div class="flex items-center gap-1">
                {% for i in (1..5) %}
                  <svg class="h-5 w-5 fill-yellow-400 text-yellow-400" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                {% endfor %}
              </div>
              <span class="text-gray-600" id="reviews-count">(547 valoraciones)</span>
            </a>
            <div class="flex items-center gap-3">
              <span class="text-gray-600 text-sm font-medium">Compartir:</span>
              <button onclick="shareOnFacebook()" class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Compartir en Facebook">
                <svg class="h-5 w-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </button>
              <button onclick="shareOnTwitter()" class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Compartir en Twitter">
                <svg class="h-5 w-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </button>
              <button onclick="shareOnWhatsApp()" class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Compartir en WhatsApp">
                <svg class="h-5 w-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </button>
              <button onclick="copyProductLink()" class="p-2 rounded-full hover:bg-gray-100 transition-colors" title="Copiar enlace">
                <svg class="h-5 w-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </button>
            </div>
          </div>
          <p class="text-gray-600 text-lg leading-relaxed">{{ product.description }}</p>
        </div>

        <div class="bg-gradient-to-br from-red-50 to-orange-50 p-6 rounded-2xl border border-red-200">
          <div class="flex items-center gap-2 text-red-700 mb-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <span class="font-semibold">Obligatorio desde 1 Enero 2026</span>
          </div>
          <p class="text-gray-700 text-sm">Cumple con el Real Decreto 1030/2022. Todos los vehículos deben llevar baliza V-16.</p>
        </div>

        <div class="border-t border-b border-gray-200 py-6">
          <div class="flex items-baseline gap-4 mb-6">
            <span class="text-5xl font-bold text-gray-900">{{ current_variant.price | money }}</span>
            <span class="text-gray-500">IVA incluido</span>
          </div>

          {% form 'product', product, id: 'product-form' %}
            <input type="hidden" name="id" value="{{ current_variant.id }}">
            <div class="flex items-center gap-4 mb-6">
              <label class="text-gray-700 font-medium">Cantidad:</label>
              <div class="flex items-center gap-3">
                <button type="button" onclick="decrementQuantity()" class="w-10 h-10 rounded-lg border border-gray-300 hover:border-red-600 hover:text-red-600 transition-colors font-semibold">
                  -
                </button>
                <input type="number" name="quantity" value="1" min="1" max="10" id="quantity" class="w-12 text-center font-semibold text-lg border-0 outline-none">
                <button type="button" onclick="incrementQuantity()" class="w-10 h-10 rounded-lg border border-gray-300 hover:border-red-600 hover:text-red-600 transition-colors font-semibold">
                  +
                </button>
              </div>
            </div>

            <button type="submit" name="add" id="add-to-cart-btn" class="w-full bg-gradient-to-r from-red-600 to-orange-600 text-white py-4 rounded-xl font-semibold text-lg hover:shadow-xl transition-all transform hover:scale-105 mb-4">
              Añadir al Carrito - <span id="total-price">{{ current_variant.price | money }}</span>
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function changeImage(url) {
    document.getElementById('main-product-image').src = url;
  }

  function incrementQuantity() {
    const input = document.getElementById('quantity');
    if (input.value < 10) {
      input.value = parseInt(input.value) + 1;
      updateTotalPrice();
    }
  }

  function decrementQuantity() {
    const input = document.getElementById('quantity');
    if (input.value > 1) {
      input.value = parseInt(input.value) - 1;
      updateTotalPrice();
    }
  }

  function updateTotalPrice() {
    const quantity = parseInt(document.getElementById('quantity').value);
    const price = {{ current_variant.price | divided_by: 100.0 }};
    const total = (price * quantity).toFixed(2);
    document.getElementById('total-price').textContent = total + '€';
  }

  // Social sharing functions
  function shareOnFacebook() {
    const url = encodeURIComponent(window.location.href);
    window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank', 'width=600,height=400');
  }

  function shareOnTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent('{{ product.title | escape }}');
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank', 'width=600,height=400');
  }

  function shareOnWhatsApp() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent('{{ product.title | escape }}');
    window.open(`https://wa.me/?text=${text}%20${url}`, '_blank');
  }

  function copyProductLink() {
    navigator.clipboard.writeText(window.location.href).then(function() {
      alert('¡Enlace copiado al portapapeles!');
    }, function() {
      alert('Error al copiar el enlace');
    });
  }

  // Handle add to cart form submission
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('product-form');
    const addButton = document.getElementById('add-to-cart-btn');

    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(form);
        const variantId = parseInt(formData.get('id'));
        const quantity = parseInt(formData.get('quantity'));

        // Disable button to prevent double submission
        addButton.disabled = true;
        addButton.textContent = 'Añadiendo...';

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({
            items: [{
              id: variantId,
              quantity: quantity
            }]
          })
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
          // Update cart count
          const cartCount = document.querySelectorAll('.cart-count');
          if (cartCount.length > 0) {
            fetch('/cart.js')
              .then(response => response.json())
              .then(cart => {
                cartCount.forEach(el => {
                  el.textContent = cart.item_count;
                });
              });
          }

          // Show notification
          document.dispatchEvent(new CustomEvent('cart:item-added'));

          // Redirect to cart page
          window.location.href = '/cart';
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
          alert('Error al añadir el producto al carrito. Por favor, inténtalo de nuevo.');

          // Re-enable button
          addButton.disabled = false;
          const currentQuantity = parseInt(document.getElementById('quantity').value);
          const price = {{ current_variant.price | divided_by: 100.0 }};
          const total = (price * currentQuantity).toFixed(2);
          addButton.innerHTML = 'Añadir al Carrito - <span id="total-price">' + total + '€</span>';
        });
      });
    }
  });
</script>

