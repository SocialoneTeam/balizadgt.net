<section class="py-4 bg-red-600 text-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap items-center justify-center gap-4 text-center">
      <svg class="h-5 w-5 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      <p class="font-semibold text-lg">
        {{ section.settings.urgency_text | default: "Quedan solo" }} <span class="text-yellow-300 font-bold">{{ section.settings.time_remaining | default: "2 meses" }}</span> {{ section.settings.urgency_suffix | default: "para que sea obligatoria" }}
      </p>
      <span class="text-yellow-300">•</span>
      <p class="font-semibold">
        {{ section.settings.call_to_action | default: "No te quedes sin tu baliza V-16" }}
      </p>
    </div>
  </div>
</section>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>

{% schema %}
{
  "name": "Urgency Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Mostrar banner",
      "default": true
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "Texto de urgencia",
      "default": "Quedan solo"
    },
    {
      "type": "text",
      "id": "time_remaining",
      "label": "Tiempo restante",
      "default": "2 meses"
    },
    {
      "type": "text",
      "id": "urgency_suffix",
      "label": "Texto después del tiempo",
      "default": "para que sea obligatoria"
    },
    {
      "type": "text",
      "id": "call_to_action",
      "label": "Llamada a la acción",
      "default": "No te quedes sin tu baliza V-16"
    }
  ]
}
{% endschema %}
