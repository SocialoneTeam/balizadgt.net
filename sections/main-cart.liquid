<div class="min-h-screen bg-gray-50 py-12">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Carrito de Compra</h1>

    {% if cart.item_count > 0 %}
      <div class="grid lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-md p-6 space-y-6">
            {% for item in cart.items %}
              <div class="flex gap-6 pb-6 border-b border-gray-200 last:border-0">
                <div class="w-32 h-32 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0">
                  {% if item.image %}
                    <img src="{{ item.image | img_url: '200x200' }}" alt="{{ item.title }}" class="w-full h-full object-cover">
                  {% endif %}
                </div>

                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{{ item.product.title }}</h3>
                  <p class="text-gray-600 mb-4">{{ item.variant.title }}</p>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <button onclick="updateCartItem({{ forloop.index }}, {{ item.quantity | minus: 1 }})" class="w-8 h-8 rounded-lg border border-gray-300 hover:border-red-600 hover:text-red-600 transition-colors font-semibold">
                        -
                      </button>
                      <span class="w-12 text-center font-semibold">{{ item.quantity }}</span>
                      <button onclick="updateCartItem({{ forloop.index }}, {{ item.quantity | plus: 1 }})" class="w-8 h-8 rounded-lg border border-gray-300 hover:border-red-600 hover:text-red-600 transition-colors font-semibold">
                        +
                      </button>
                    </div>

                    <div class="text-right">
                      <p class="text-2xl font-bold text-gray-900">{{ item.final_line_price | money }}</p>
                      <button onclick="removeCartItem({{ forloop.index }})" class="text-sm text-red-600 hover:text-red-700 font-semibold mt-2">
                        Eliminar
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-md p-6 sticky top-24">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Resumen del Pedido</h2>

            <div class="space-y-4 mb-6 pb-6 border-b border-gray-200">
              <div class="flex justify-between text-gray-600">
                <span>Subtotal ({{ cart.item_count }} producto{% if cart.item_count > 1 %}s{% endif %})</span>
                <span>{{ cart.total_price | money }}</span>
              </div>
              <div class="flex justify-between text-gray-600">
                <span>Envío</span>
                <span>{% if cart.total_price >= 5000 %}Gratis{% else %}{{ 500 | money }}{% endif %}</span>
              </div>
            </div>

            <div class="flex justify-between text-xl font-bold text-gray-900 mb-6">
              <span>Total</span>
              <span>{% if cart.total_price >= 5000 %}{{ cart.total_price | money }}{% else %}{{ cart.total_price | plus: 500 | money }}{% endif %}</span>
            </div>

            <a href="/checkout" class="block w-full bg-gradient-to-r from-red-600 to-orange-600 text-white py-4 rounded-xl font-semibold text-lg text-center hover:shadow-xl transition-all transform hover:scale-105 mb-4">
              Proceder al Pago
            </a>

            <a href="/" class="block w-full text-center text-gray-600 hover:text-red-600 font-semibold">
              ← Seguir Comprando
            </a>

            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span>Pago 100% seguro</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="bg-white rounded-2xl shadow-md p-12 text-center">
        <svg class="h-24 w-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Tu carrito está vacío</h2>
        <p class="text-gray-600 mb-8">Añade productos para empezar tu compra</p>
        <a href="/" class="inline-block bg-gradient-to-r from-red-600 to-orange-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:shadow-xl transition-all transform hover:scale-105">
          Ver Productos
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Main Cart",
  "settings": []
}
{% endschema %}
