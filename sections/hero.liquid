<section class="relative bg-gradient-to-br from-red-600 via-red-700 to-orange-600 text-white overflow-hidden">
  <div class="absolute inset-0 bg-black opacity-10"></div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 md:py-32">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Obligatorio desde 1 Enero 2026
        </div>

        <h1 class="text-5xl md:text-6xl font-bold leading-tight">
          {{ section.settings.heading | default: "Baliza V-16" }}
          <span class="block text-orange-200">{{ section.settings.subheading | default: "Homologada DGT" }}</span>
        </h1>

        <p class="text-xl text-red-50 leading-relaxed">
          {{ section.settings.description | default: "Dispositivo de preseñalización de peligro con geolocalización. Sustituye los triángulos de emergencia y es obligatorio por ley." }}
        </p>

        <div class="flex flex-wrap gap-4">
          {% if section.settings.primary_button_link != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="bg-white text-red-600 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-50 transition-all transform hover:scale-105 shadow-xl">
            {{ section.settings.primary_button_text | default: "Ver Detalles" }}
          </a>
          {% endif %}
          {% if section.settings.secondary_button_link != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="bg-red-800/50 backdrop-blur-sm text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-red-800 transition-all border-2 border-white/30">
            {{ section.settings.secondary_button_text | default: "Comprar Ahora" }}
          </a>
          {% endif %}
        </div>

        <div class="flex items-center gap-6 pt-4">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <span class="text-sm">Certificado IDIADA</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm">Envío 24-48h</span>
          </div>
        </div>
      </div>

      <div class="relative">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '800x800' }}" alt="{{ section.settings.heading }}" class="relative rounded-3xl shadow-2xl w-full h-auto object-cover">
        {% else %}
          <img src="https://images.pexels.com/photos/1545743/pexels-photo-1545743.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Baliza V-16 emergencia coche" class="relative rounded-3xl shadow-2xl w-full h-auto object-cover">
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Baliza V-16"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Homologada DGT"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Ver Detalles"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Comprar Ahora"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ]
}
{% endschema %}
