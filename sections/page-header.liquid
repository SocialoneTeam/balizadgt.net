<div class="bg-gradient-to-br from-red-600 via-red-700 to-orange-600 text-white py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="text-5xl font-bold mb-6">
      {% if section.settings.title != blank %}
        {{ section.settings.title }}
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    {% if section.settings.description != blank %}
      <p class="text-xl text-red-50 max-w-2xl">
        {{ section.settings.description }}
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}
