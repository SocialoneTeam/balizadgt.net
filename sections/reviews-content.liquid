              <div class="flex-1 bg-gray-200 rounded-full h-3">
                <div class="bg-yellow-400 h-3 rounded-full" style="width: 0%"></div>
              </div>
              <span class="text-sm text-gray-600 w-12 text-right">0%</span>
            </div>
          </div>

          <button onclick="document.getElementById('review-form').scrollIntoView({behavior: 'smooth'})" class="w-full bg-gradient-to-r from-red-600 to-orange-600 text-white py-3 rounded-xl font-semibold hover:shadow-lg transition-all">
            Escribe una Valoración
          </button>
        </div>
      </div>

      <div class="lg:col-span-2">
        <div class="mb-6 flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Todas las Valoraciones</h2>
          <select id="sort-reviews" class="px-4 py-2 border border-gray-300 rounded-lg focus:border-red-600 focus:ring-2 focus:ring-red-600 focus:ring-opacity-20 outline-none">
            <option value="recent">Más recientes</option>
            <option value="helpful">Más útiles</option>
            <option value="rating-high">Mayor valoración</option>
            <option value="rating-low">Menor valoración</option>
          </select>
        </div>

        <div id="reviews-list" class="space-y-6">
          <!-- Reviews will be loaded here -->
        </div>

        <div class="mt-12 p-8 bg-gray-50 rounded-2xl" id="review-form">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Comparte tu Experiencia</h2>
          <form id="submit-review-form" class="space-y-6">
            <div>
              <label class="block text-gray-700 font-medium mb-2">Tu valoración *</label>
              <div class="flex items-center gap-2">
                <button type="button" class="star-button text-gray-300 hover:text-yellow-400 transition-colors" data-rating="1">
